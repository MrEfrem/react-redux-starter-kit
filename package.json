{
  "name": "react-redux-starter-kit",
  "version": "0.13.0",
  "description": "Get started with React, Redux, React-Router, and Koa!",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf dist",
    "compile": "webpack",
    "compile:watch": "webpack --watch",
    "compile:client": "webpack --config webpack.config-client.js",
    "compile:server": "webpack --config webpack.config-server.js",
    "compile:server:watch": "webpack --config webpack.config-server.js --watch",
    "start": "npm run dev",
    "dev": "node --harmony bin/webpack-dev-server",
    "test": "npm run test:unit && npm run test:server",
    "test:unit": "node ./node_modules/karma/bin/karma start",
    "test:server": "mocha --harmony bin/test-server",
    "deploy": "npm run test:unit && npm run compile && npm run test:server",
    "server:start": "node --harmony bin/server",
    "watch": "npm run compile:client -- --nw && npm run compile:server -- --nw && concurrent --kill-others \"npm run compile:server:watch -- --nw\" \"npm run dev -- --nw\" \"npm run server:start -- --nw\"",
    "watch:cw": "npm run compile:client && npm run compile:server && concurrent --kill-others \"npm run compile:server:watch\" \"npm run dev\" \"npm run server:start\"",
    "watch:no-debug": "npm run compile:client -- --no_debug && npm run compile:server -- --no_debug && concurrent --kill-others \"npm run compile:server:watch -- --no_debug\" \"npm run dev -- --no_debug\" \"npm run server:start -- --no_debug\""
  },
  "author": "David Zukowski <david@zuko.me> (http://zuko.me)",
  "license": "MIT",
  "dependencies": {
    "babel": "^5.8.23",
    "babel-plugin-typecheck": "^1.2.0",
    "history": "^1.9.0",
    "koa": "^1.0.0",
    "koa-static": "^1.4.9",
    "react": "^0.14.0-rc1",
    "react-dom": "^0.14.0-rc1",
    "react-redux": "^2.0.0",
    "react-router": "1.0.0-rc1",
    "redux": "^3.0.0",
    "redux-thunk": "^1.0.0",
    "serialize-javascript": "^1.1.2",
    "thunkify": "^2.1.2",
    "yargs": "^3.18.0"
  },
  "devDependencies": {
    "babel-eslint": "^4.1.3",
    "babel-loader": "^5.0.0",
    "babel-plugin-react-transform": "^1.0.5",
    "babel-runtime": "^5.8.20",
    "concurrently": "^0.1.1",
    "eslint": "^1.5.0",
    "eslint-config-airbnb": "0.0.8",
    "eslint-loader": "^1.0.0",
    "eslint-plugin-react": "^3.4.2",
    "extract-text-webpack-plugin": "^0.8.0",
    "html-webpack-plugin": "^1.6.1",
    "karma": "^0.13.8",
    "karma-coverage": "^0.5.0",
    "karma-mocha": "^0.2.0",
    "karma-phantomjs-launcher": "^0.2.1",
    "karma-sinon-chai": "^1.0.0",
    "karma-spec-reporter": "0.0.20",
    "karma-webpack": "^1.7.0",
    "mocha": "^2.3.3",
    "phantomjs": "^1.9.17",
    "phantomjs-polyfill": "0.0.1",
    "piping": "^0.2.0",
    "react-addons-test-utils": "^0.14.0-rc1",
    "react-transform-catch-errors": "^1.0.0",
    "react-transform-hmr": "^1.0.0",
    "redbox-react": "^1.0.6",
    "redux-devtools": "^2.0.0",
    "redux-logger": "^1.0.8",
    "supertest": "^1.0.1",
    "webpack": "^1.12.2",
    "webpack-dev-server": "^1.11.0"
  }
}
