{
  "extends": "airbnb",
  "globals": {
    "__DEV__"      : false,
    "__PROD__"     : false,
    "__DEBUG__"    : false,
    "__HMR__" : false,
    "__SERVER__": false,
    "__CLIENT__": false
  },
  "rules": {
    "comma-dangle": [1, "never"],
    "key-spacing": [0, {
      "beforeColon": true,
      "afterColon": true
    }],
    "no-else-return": 0,
    "space-before-function-paren": [0, "always"],
    "react/jsx-quotes": [0, "single"]
  }
}
